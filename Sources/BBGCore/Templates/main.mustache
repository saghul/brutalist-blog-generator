[data-theme="light"] {
    --bbg-background: {{theme.light.background}};
    --bbg-text: {{theme.light.text}};
    --bbg-link: {{theme.light.link}};
    --bbg-code-bg: {{theme.light.codeBg}};
    --bbg-border: {{theme.light.border}};
    --bbg-code-border-left: {{theme.light.codeBorderLeft}};
    --bbg-secondary-text: {{theme.light.secondaryText}};
}

[data-theme="dark"] {
    --bbg-background: {{theme.dark.background}};
    --bbg-text: {{theme.dark.text}};
    --bbg-link: {{theme.dark.link}};
    --bbg-code-bg: {{theme.dark.codeBg}};
    --bbg-border: {{theme.dark.border}};
    --bbg-code-border-left: {{theme.dark.codeBorderLeft}};
    --bbg-secondary-text: {{theme.dark.secondaryText}};
}

body {
    background-color: var(--bbg-background);
    color: var(--bbg-text);
    margin: 0 auto;
    max-width: 950px;
    min-height: 100vh;
    line-height: 1.4;
    font-family: Open Sans,Arial;
    font-size: 16px;
    padding: 0 10px;
    display: flex;
    flex-direction: column;
}
h1,
h2,
h3,
h4,
h5,
h6 {
    font-weight: 700;
}
h1 {
    font-size: 2rem;
    line-height: 1.125;
    margin-top: 3rem;
}
h2 {
    font-size: 1.75rem;
    line-height: 1.15;
    margin-top: 2.625rem;
}
h3 {
    font-size: 1.5rem;
    line-height: 1.175;
    margin-top: 2.25rem;
}
h4 {
    font-size: 1.25rem;
    line-height: 1.2;
    margin-top: 1.874rem;
}
h5 {
    font-size: 1.125rem;
    line-height: 1.225;
    margin-top: 1.6875rem;
}
h6 {
    font-size: 1rem;
    line-height: 1.25;
    margin-top: 1.5rem;
}
li p {
    margin: 0;
}
blockquote {
    border-left: 5px solid var(--bbg-border);
    padding-left: 10px;
}
code {
    background: var(--bbg-code-bg);
    border: 1px solid var(--bbg-border);
}
pre {
    margin: 0;
}
pre code {
    border-left: 3px solid var(--bbg-code-border-left);
    display: block;
    max-width: 100%;
    overflow: auto;
    padding-left: 10px;
}
a {
    color: var(--bbg-link);
    text-decoration: none;
}
header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 10px;
}
header hgroup {
    margin-bottom: 0;
}
header hr {
    flex-basis: 100%;
}
nav ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 1em;
}
#theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.2em;
    padding: 0;
}
footer {
    margin-top: auto;
    text-align: center;
    width: 100%;
    padding: 1em 0;
}
main {
    flex-grow: 1;
}
main img {
    display: block;
    max-width: 600px;
    max-height: 500px;
    margin: 0 auto;
}
hgroup {
    margin-bottom: 1em;
}
hgroup > * {
    margin-top: 0;
    margin-bottom: 0;
}
hgroup > :not(:first-child):last-child {
    font-size: 1rem;
    color: var(--bbg-secondary-text);
}
hr {
    height: 0;
    margin: 1rem 0;
    border: 0;
    border-top: 1px solid;
}
